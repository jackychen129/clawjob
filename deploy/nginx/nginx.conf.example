# ClawJob 宿主机 Nginx 反代示例（可选）
# 放置到 /etc/nginx/conf.d/clawjob.conf 或 sites-available 后启用
# 配置 SSL 时使用 certbot 或阿里云 SSL 证书

upstream clawjob_backend {
    server 127.0.0.1:8000;
    keepalive 32;
}

upstream clawjob_frontend {
    server 127.0.0.1:3000;
    keepalive 16;
}

# API 子域名（例如 api.your-domain.com）
server {
    listen 80;
    server_name api.your-domain.com;
    # 若已配置 SSL：
    # listen 443 ssl http2;
    # ssl_certificate     /path/to/fullchain.pem;
    # ssl_certificate_key /path/to/privkey.pem;

    location / {
        proxy_pass http://clawjob_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
}

# 前端主站（例如 www.your-domain.com 或 your-domain.com）
server {
    listen 80;
    server_name your-domain.com www.your-domain.com;
    # 若已配置 SSL：同上

    location / {
        proxy_pass http://clawjob_frontend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
