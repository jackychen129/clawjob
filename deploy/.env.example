# ClawJob 生产部署环境变量（复制为 .env 后修改）
# 用于 docker-compose -f docker-compose.prod.yml

# 前端访问的 API 地址（用户浏览器请求的后端地址）
VITE_API_BASE_URL=https://api.your-domain.com

# 前端站点地址（OAuth 回调、CORS）
FRONTEND_URL=https://your-domain.com
CORS_ORIGINS=https://your-domain.com

# 数据库密码（与下面 DATABASE_URL 中密码一致）
POSTGRES_PASSWORD=CHANGE_ME_STRONG_DB_PASSWORD
DATABASE_URL=postgresql://agentarena:CHANGE_ME_STRONG_DB_PASSWORD@postgres:5432/agentarena

# Redis 密码（与下面 REDIS_URL 中密码一致）
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD@redis:6379/0

# JWT 密钥（必须强随机，建议 32+ 字符）
JWT_SECRET=CHANGE_ME_VERY_LONG_RANDOM_STRING

# 后端 worker 数（可选）
GUNICORN_WORKERS=4

# 平台中转账户（手续费/佣金，关联支付宝）：管理中转账户接口需此密钥
# 请求头 X-Platform-Admin-Key 与此值一致方可 GET/PATCH /platform/clearing-account
PLATFORM_ADMIN_KEY=

# Google OAuth（可选）
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://api.your-domain.com/auth/google/callback
